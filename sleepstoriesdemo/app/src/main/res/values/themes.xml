<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SleepStoriesDemo" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Theme.SleepStoriesDemo" parent="Base.Theme.SleepStoriesDemo" />

    <style name="base_font">
        <item name="android:textColor">@color/white</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="base_button" parent="text_normal_12">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/bg_button</item>
    </style>

    <style name="roundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="font_bold" parent="base_font">
        <item name="android:fontFamily">@font/helvetica_neue_bold</item>
    </style>

    <style name="font_light" parent="base_font">
        <item name="android:fontFamily">@font/helvetica_neue_light</item>
    </style>

    <style name="font_normal" parent="base_font">
        <item name="android:fontFamily">@font/helvetica_neue_roman</item>
    </style>

    <style name="font_semi_bold" parent="base_font">
        <item name="android:fontFamily">@font/garamond_premier_pro_semibold</item>
    </style>

    <style name="text_bold_28" parent="font_bold">
        <item name="android:textSize">28sp</item>
    </style>

    <style name="text_bold_18" parent="font_bold">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="text_light_16" parent="font_light">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="text_semi_bold_36" parent="font_semi_bold">
        <item name="android:textSize">36sp</item>
    </style>

    <style name="text_normal_16" parent="font_normal">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="text_normal_12" parent="font_normal">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="text_normal_11" parent="font_normal">
        <item name="android:textSize">11sp</item>
    </style>

