<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Logindemo" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Logindemo" parent="Base.Theme.Logindemo" />

    <style name="base_font">
        <item name="android:textColor">@color/black</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="base_button" parent="text_semi_bold_16">
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="font_regular" parent="base_font">
        <item name="android:fontFamily">@font/rubik_regular</item>
    </style>

    <style name="font_medium" parent="base_font">
        <item name="android:fontFamily">@font/rubik_medium</item>
    </style>

    <style name="font_semi_bold" parent="base_font">
        <item name="android:fontFamily">@font/rubik_semi_bold</item>
    </style>

    <style name="text_semi_bold_24" parent="font_semi_bold">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="text_semi_bold_16" parent="font_semi_bold">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="text_semi_bold_14" parent="font_semi_bold">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="text_semi_bold_12" parent="font_semi_bold">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="text_medium_12" parent="font_medium">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="text_regular_16" parent="font_regular">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="text_regular_14" parent="font_regular">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="edit_text_regular_16" parent="text_regular_16">
        <item name="android:maxLines">1</item>
        <item name="android:background">@drawable/bg_text_input</item>
    </style>

    <style name="bg_text_medium_12" parent="text_medium_12">
        <item name="android:layout_marginLeft">14dp</item>
        <item name="android:layout_marginTop">14dp</item>
        <item name="android:paddingHorizontal">8dp</item>
        <item name="android:textColor">@color/black_500</item>
        <item name="background">@color/white</item>
    </style>
</resources>